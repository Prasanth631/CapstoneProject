# ============================================
# CI/CD Dashboard - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ============================================
# Jenkins Configuration
# ============================================
JENKINS_URL=http://host.docker.internal:8080
JENKINS_USER=your_jenkins_username
JENKINS_TOKEN=your_jenkins_api_token

# ============================================
# PostgreSQL Database Configuration
# ============================================
DB_HOST=postgres.capstone-app.svc.cluster.local
DB_NAME=capstone
DB_USER=admin
DB_PASSWORD=your_secure_password_here

# ============================================
# Application Configuration
# ============================================
SERVER_PORT=8082
SPRING_PROFILES_ACTIVE=prod

# ============================================
# Kubernetes Configuration
# ============================================
K8S_NAMESPACE=capstone-app
K8S_DEPLOYMENT=capstone-deployment
K8S_CONTAINER=capstone-container

# ============================================
# Docker Configuration
# ============================================
DOCKER_REGISTRY=your_dockerhub_username
DOCKER_IMAGE_NAME=capstone_pro
DOCKER_IMAGE_TAG=latest

# ============================================
# Monitoring Configuration
# ============================================
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# ============================================
# Notes:
# ============================================
# 1. For local development, use localhost URLs
# 2. For Kubernetes deployment, use cluster DNS names
# 3. Keep this file updated when adding new configuration
# 4. Use strong passwords for production environments
